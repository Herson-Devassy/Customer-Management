@model CustomerMvcApp.Models.Customer

<!DOCTYPE html>
<html>
<head>
    <title>Delete Customer</title>
    <style>
        body {
            font-family: Arial, sans-serif;
        }

        .container {
            width: 50%;
            margin: 20px auto;
        }

        .button {
            padding: 10px 15px;
            border: none;
            background-color: #007bff;
            color: white;
            cursor: pointer;
        }

            .button:hover {
                background-color: #0056b3;
            }
    </style>
</head>
<body>
    <div class="container">
        <h1>Delete Customer</h1>
        <p>Are you sure you want to delete the following customer?</p>
        <dl>
            <dt>ID:</dt>
            <dd>@Model.Id</dd>
            <dt>First Name:</dt>
            <dd>@Model.FirstName</dd>
            <dt>Last Name:</dt>
            <dd>@Model.LastName</dd>
            <dt>Email:</dt>
            <dd>@Model.Email</dd>
        </dl>
        <form method="post">
            <input type="hidden" name="Id" value="@Model.Id" />
            <button type="submit" class="button">Delete</button>
            <a href="@Url.Action("Index")" class="button">Cancel</a>
        </form>
    </div>
</body>
</html>
